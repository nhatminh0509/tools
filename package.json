{
  "name": "boilerplate-dapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env.development next dev",
    "build": "next build",
    "start": "NODE_ENV=production dotenv -e .env.production next start",
    "build:development": "dotenv -e .env.development next build",
    "start:development": "dotenv -e .env.NODE_ENV=development dotenv -e .env.development next start",
    "build:production": "dotenv -e .env.production next build",
    "start:production": "NODE_ENV=production dotenv -e .env.production next start",
    "pm2:development": "dotenv -e .env.NODE_ENV=development dotenv -e .env.development next start ./build-develop",
    "pm2:production": "NODE_ENV=production dotenv -e .env.production next start",
    "lint": "eslint --fix --ext .js,.jsx .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@metamask/onboarding": "^1.0.1",
    "@reduxjs/toolkit": "^1.8.2",
    "@walletconnect/client": "^1.7.8",
    "@walletconnect/qrcode-modal": "^1.7.8",
    "@walletconnect/utils": "^1.7.8",
    "antd": "^4.20.7",
    "axios": "^0.27.2",
    "bigdecimal": "^0.6.1",
    "classnames": "^2.3.2",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.8",
    "express": "^4.18.1",
    "hex2dec": "^1.1.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "next": "^12.1.6",
    "path": "^0.12.7",
    "react": "^18.1.0",
    "react-countdown": "^2.3.2",
    "react-device-detect": "^2.2.2",
    "react-dom": "^18.1.0",
    "react-lottie": "^1.2.3",
    "react-media": "^1.10.0",
    "react-query": "^3.39.1",
    "react-redux": "^8.0.2",
    "react-spring": "^9.4.5",
    "react-toastify": "^9.0.4",
    "recharts": "^2.1.10",
    "redux": "^4.2.0",
    "sass": "^1.52.1",
    "sharp": "^0.30.7",
    "shortid": "^2.2.16",
    "styled-components": "^5.3.5",
    "wavesurfer.js": "4.0.1",
    "web3": "^1.7.3"
  },
  "devDependencies": {
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.18.0",
    "eslint-config-next": "12.1.6",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.0",
    "pretty-quick": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": "yarn prettier --write",
    "*.{js,jsx,ts,tsx}": "yarn lint --fix"
  }
}
